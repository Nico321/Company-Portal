<h1>Open Invoices</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Subject</th>
      <th>Notes</th>
      <th>Agent</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer.email %></td>
        <td><%= invoice.subject %></td>
        <td><%= invoice.installation.order.assignment.offer.request.notes.count + invoice.installation.order.assignment.offer.notes.count + invoice.installation.order.assignment.notes.count + invoice.installation.order.notes.count + invoice.installation.notes.count + invoice.notes.count %></td>
        <% if invoice.agent %>
          <td><%= invoice.agent.email %></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= link_to 'Show', invoice, :class => "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>