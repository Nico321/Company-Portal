<p id="notice"><%= notice %></p>

<p>
  <strong>Subject:</strong>
  <%= @invoice.subject %>
</p>

<p>
  <strong>Body:</strong>
  <%= @invoice.body %>
</p>
<p>
  <strong>Customer:</strong>
  <%= @invoice.customer.email %>
</p>

<p>
  <strong>Installationprice:</strong>
  <%= @invoice.installationprice %>
</p>


<%= show_positions(@invoice).html_safe%>

<%
 if @invoice.payed == nil
 	noteButton = "invoice"
 end
 %>
