<% if params[:format] != "pdf" %>
	<%= controlLink(@invoice.installation, nil).html_safe %>

<% end 
if @invoice.payed == nil
	noteButton = "invoice"
end %>

<%= showObject(@invoice, noteButton, @invoice.installation.order.assignment.offer.request, true, true, true, params[:format]).html_safe %>


<% if @invoice.payed == nil and @invoice.customer == current_user %>
	<%= link_to "Checkout", @invoice.paypal_url(root_url, ipn_notification_payment_notifications_url),  :class => "btn btn-success"%>
<% end %>