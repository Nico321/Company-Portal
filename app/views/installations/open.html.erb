<h1>Open Installations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Subject</th>
      <th>Notes</th>
      <th>Agent</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @installations.each do |installation| %>
      <tr>
        <td><%= installation.customer.email %></td>
        <td><%= installation.subject %></td>
        <td><%= installation.order.assignment.offer.request.notes.count + installation.order.assignment.offer.notes.count + installation.order.assignment.notes.count + installation.order.notes.count + installation.notes.count %></td>
        <% if installation.agent %>
          <td><%= installation.agent.email %></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= link_to 'Show', installation, :class => "btn btn-info" %></td>
        <td><%= link_to 'Assume', assume_installation_path(installation), :class => "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>