<h1>My Assignments</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Subject</th>
      <th>Notes</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.customer.email %></td>
        <td><%= assignment.subject %></td>
        <td><%= assignment.offer.request.notes.count + assignment.offer.notes.count + assignment.notes.count %></td>
        <td><%= link_to 'Show', assignment, :class => "btn btn-info" %></td>
        <td><%= link_to 'Release', release_assignment_path(assignment), :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>