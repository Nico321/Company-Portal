<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.file_field :image %>
  </div>
<% if params[:request_id] %>
  <div class="field hidden">
    <%= f.text_field :request_id, :value => params[:request_id] %>
  </div>
<% elsif params[:offer_id] %>
  <div class="field hidden">
    <%= f.text_field :offer_id, :value => params[:offer_id] %>
  </div>
 <% elsif params[:bugreport_id] %>
  <div class="field hidden">
    <%= f.text_field :bugreport_id, :value => params[:bugreport_id] %>
  </div>
  <% elsif params[:assignment_id] %>
  <div class="field hidden">
    <%= f.text_field :assignment_id, :value => params[:assignment_id] %>
  </div>
  <% elsif params[:order_id] %>
  <div class="field hidden">
    <%= f.text_field :order_id, :value => params[:order_id] %>
  </div>
  <% elsif params[:installation_id] %>
  <div class="field hidden">
    <%= f.text_field :installation_id, :value => params[:installation_id] %>
  </div>
  <% elsif params[:invoice_id] %>
  <div class="field hidden">
    <%= f.text_field :invoice_id, :value => params[:invoice_id] %>
  </div>
<%end%>

  <div class="actions">
    <%= f.submit :value => "Add note", :class => "btn btn-success" %>
  </div>
<% end %>
