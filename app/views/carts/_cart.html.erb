
<h2>Your Cart</h2>
	<table>	 
	 <%= render(cart.line_items)%>
	 <tr class ="total_line">
      <td colspan="1">Total</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
      </tr>
      </table>
      <% if cart.line_items.length >=1 %>
		<a>
		<%= link_to cart, method: :delete, data:{confirm: 'Are you sure?'}, remote: true, :class => 'btn btn-danger btn-mini' do %>
			<i class= "fa fa-trash-o fa-lg"> Empty Cart</i>
		    <% end %>
		 </a>
		 <% end %>
</div>



