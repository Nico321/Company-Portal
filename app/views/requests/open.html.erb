<h1>Open Requests</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Subject</th>
      <th>Urgency</th>
      <th>Notes</th>
      <th>Agent</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= User.find(request.customer_id).email %></td>
        <td><%= request.subject %></td>
        <td><% if request.urgency == 1 %>
           uncritical<div class="circle circle-green circle-small"></div>
        <% elsif request.urgency == 2%>
          medium<div class="circle circle-small"></div>
        <% else %>
          critical<div class="circle circle-red circle-small"></div>
        <% end %></td>
        <td><%= Note.where(request_id: request).count %></td>
        <% if request.agent_id %>
          <td><%= User.find(request.agent_id).email %></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= link_to 'Show', request, :class => "btn btn-info" %></td>
        <td><%= link_to 'Assume', assume_request_path(request), :class => "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>