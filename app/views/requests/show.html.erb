<table>
  <tr>
      <td><h1><%= User.find(@request.customer).email %> - <%= @request.subject %></h1></td>
      <td><h1>-
        <% if @request.urgency == 1 %>
           uncritical</h1></td><td><div class="circle circle-green"></div>
        <% elsif @request.urgency == 2%>
          medium</h1></td><td><div class="circle"></div>
        <% else %>
          critical</h1></td><td><div class="circle circle-red"></div>
        <% end %>
      </td>
    </h1>
  </tr>
  <tr>
    <td colspan="3">
      <p>
        <%= @request.body %>
      </p>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Agent:</strong>
      <% if @request.agent_id %>
        <%= User.find(@request.agent_id).email %>
      <% else %>
        Nobody
      <% end %>
    </td>
  </tr>
</table>
<% 
if @request.offer == nil
  noteButton = "request"
end %>
<%= show_notes(@request, noteButton, @request.id).html_safe%>
<% if @request.agent == current_user and @request.offer == nil %>
  <div><%= link_to "Create Offer", convert_offers_path(:request_id => @request.id), :class => "btn btn-success" %></div>
<% end %>

