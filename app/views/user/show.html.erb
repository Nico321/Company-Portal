<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN""http://www.w3.org/TR/html4/loose.dtd">
<html>
	<head>
		<title><%= @user.firstname %> <%= @user.lastname %></title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="span6">
					<table class="table table-hover">
						<tr>
							<td>Firstname</td>
							<td><%= @user.firstname %></td>
						</tr>
						<tr>
							<td>Lastname</td>
							<td><%= @user.lastname %></td>
						</tr>
						<tr>
							<td>Mail</td>
							<td><%= @user.email %></td>
						</tr>
						<tr>
							<td>Phone</td>
							<td><%= @user.phone %></td>
						</tr>
						<tr>
							<td>Address</td>
							<td><%= @user.street %></td>
						</tr>
						<tr>
							<td>Phone</td>
							<td><%= @user.zip %></td>
						</tr>
						<tr>
							<td>Online</td>
							<td><%= @online.html_safe %></td>
						</tr>
					</table>
				</div>
				<div class="span6">
				<% if @user.avatar_file_name != nil %>
					<%= image_tag @user.avatar.url(:medium) %>
				 <% else %>
				 	<img src="/images/avatarIsNil.jpg>"
				<% end %>
				</div>
			</div>
		</div>
	</body>
</html>